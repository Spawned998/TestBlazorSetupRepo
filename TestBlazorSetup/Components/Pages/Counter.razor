@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me now!</button>

<button class="btn btn-primary" @onclick="NotifyUser">Notify me of something!</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void NotifyUser()
    {
        // This is a placeholder for a notification logic
        Console.WriteLine("User has been notified!");
    }
}
